<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>ES: editor</title>

    <link rel="stylesheet" href="/static/css/lib/bootstrap.css" />
    <link rel="stylesheet" href="/static/css/lib/jquery-ui.css">
    <link rel="stylesheet" href="/static/css/lib/jquery-ui.theme.css">

    <link rel="stylesheet" href="/static/css/style.css" />

    <!-- PrototypeJS 1.7.2 fails to work with AMD -->
    <script src="/static/js/lib/min/prototype.js"></script>
    <script data-main="/static/js/editor" src="/static/js/lib/min/require.js"></script>
</head>
<body>

<header class="navbar navbar-default">
    <div class="container">
        <h1>ES
            <small>редактор</small>
            <span class="pull-right btn-group model-buttons">
                <button class="ui-button save-model" title="Save"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span></button>
                <button class="ui-button save-model" title="Open"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span></button>
                <button class="ui-button create-model" title="New"><span class="glyphicon glyphicon-file" aria-hidden="true"></span></button>
            </span>
        </h1>
    </div>
</header>

<!-- mustache partials -->
<script id="input-template" language="text/html">
    <input type="text" value="{value}" data-field="{field}" />
</script>

<script id="select-template" language="text/html">
    <select>
        {#entries}
        <option value="{value}" {selected}>{text}</option>
        {/entries}
    </select>
</script>

<script id="combobox-template" language="text/html">
    <input type="text" id="{table_name}-{field}-{entry_id}" list="{list_id}" data-entry-id="{entry_id}" />
    <datalist id="{list_id}">
        {#entries}
        <option value="{value}">{text}</option>
        {/entries}
    </datalist>
</script>

<script id="operate-template" language="text/html">
    <button class="ui-button remove" title="Remove">
        <span class="glyphicon glyphicon-remove" aria-hidden="true">
        </span>
    </button>
</script>
<!-- /mustache partials -->

<div class="container">
    <section id="model">
        <h3>Модель</h3>
        <label for="model-name">Название:</label>
        <input
                type="text"
                id="model-name"
                class="form-control"
                placeholder="Экспертная система выбора..."/>
    </section>

    <section id="questions">
        <h3>Вопросы</h3>
        <table id="questions-table" class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Текст вопроса</th>
                <th>Параметр</th>
                <th>Тип</th>
                <th>Значения</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <script id="question-row-template" language="text/html">
                <tr data-entry-id="{id}">
                    <td>{ id.value }</td>
                    <td>{> input text}</td>
                    <td>{> input parameter}</td>
                    <td>{> select type}</td>
                    <td>{> input values}</td>
                    <td>{> operate}</td>
                </tr>
            </script>
            </tbody>
        </table>
        <div class="add-button-wrapper">
            <button id="add-question" class="btn text-right add-button pull-right">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                Добавить
            </button>
        </div>
    </section>

    <section id="question-order">
        <h3>Порядок опроса</h3>
        <table class="question-order-table">
            <thead>
            <tr>
                <th data-field="from_question">Если был задан</th>
                <th data-field="from_value">и выбран ответ</th>
                <th data-field="to_question">то перейти к</th>
                <th data-field="skip_question">и не задавать</th>
            </tr>
            </thead>
        </table>
    </section>

    <section id="attributes">
        <h3>Атрибуты</h3>
        <table id="attributes-table" class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Тип</th>
                <th>Значения</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <script id="attribute-row-template" language="text/html">
                <tr data-entry-id="{id}">
                    <td>{ id.value }</td>
                    <td>{> input name}</td>
                    <td>{> select type}</td>
                    <td>{> input values}</td>
                    <td>{> operate}</td>
                </tr>
            </script>
            </tbody>
        </table>
        <div class="add-button-wrapper">
            <button id="add-attribute" class="btn text-right add-button pull-right">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                Добавить
            </button>
        </div>
    </section>

    <section id="derivation-rules">
        <h3>Правила вывода</h3>
        <label for="derivation-rules-textarea">(по одному правилу на строку)</label>
        <textarea id="derivation-rules-textarea" class="form-control" placeholder="если параметр=10 и другой_параметр>30 то атрибут=20"></textarea>
    </section>

    <section id="objects">
        <h3>Рекомендуемые объекты</h3>
        <a href="/objectsManager">Перейти к списку</a>
    </section>

    <footer id="buttons" class="pull-right">
        <button class="btn btn-primary save-model">Сохранить модель</button>
    </footer>
</div>

<!-- jQ-ui dialogs -->
<div class="ui-dialogs">
    <div id="model-saved-dialog" title="Model saved">
        <p>
            Model saved successfully.
        </p>
    </div>

    <div id="model-chooser-dialog" title="Choose a model to load">
        <form>
            <label for="model-chooser-dialog-select">Choose a model to load</label>
            <select id="model-chooser-dialog-select"></select>
        </form>
    </div>

    <div id="create-confirm-dialog" title="Create new model">
        <p>
            Do you really want to create a new model?
        </p>
        <p>
            All unsaved data will be lost.
        </p>
    </div>
</div>
<!-- /jQ-ui dialogs -->

</body>
</html>